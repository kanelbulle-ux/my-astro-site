<section class="py-20 bg-secure-black">
  <div class="container mx-auto px-6 text-center max-w-4xl">
    <div class="space-y-8">
      <h2
        class="text-4xl md:text-5xl font-bold text-white leading-tight tracking-tight"
      >
        Ready to secure your WordPress sites?
      </h2>

      <p class="text-xl text-gray-300 leading-relaxed max-w-2xl mx-auto">
        Join thousands of security-conscious teams who trust SecureList to
        protect their WordPress installations.
      </p>

      <div class="space-y-4">
        <button
          id="final-cta"
          class="bg-white text-secure-black px-8 py-4 rounded-xl font-medium text-lg hover:translate-y-[-2px] hover:shadow-xl transition-all duration-300"
        >
          Start Free Trial - No Credit Card Required
        </button>

        <p class="text-sm text-gray-400">
          14-day free trial • Set up in under 5 minutes • Cancel anytime
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  const finalCta = document.getElementById("final-cta");
  if (finalCta) {
    finalCta.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }
</script>
